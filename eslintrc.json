{
	"extends": ["eslint:recommended"],
	"env": {
        "browser": true,
        "node": true,
		"mocha": true,
		"es2020": true
    },
	"parserOptions": {
		"ecmaVersion": 2020,
		"sourceType": "script"
	},
	"rules": {
		"semi": ["error", "never"],
		"strict": "error",
		"no-console": "error"
    }
}
